<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="file show">
	<h2>Show File: upload.doc_file_name</h2>

	<table class="table table-striped table-hover" summary="File detail view">
		<tr>
			<th>File ID</th>
			<td><%= @upload.id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @upload.name %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= @upload.description %></td>
		</tr>
		<tr>
			<th>Uploader's ID</th>
			<td><%= @upload.user_id %></td>
		</tr>
		<tr>
			<th>File Size</th>
			<td><%= @upload.doc_file_size %></td>
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= @upload.doc_content_type %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @upload.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @upload.updated_at %></td>
		</tr>
		<tr>
			<th>No. of Downloads</th>
			<td><%= @upload.no_of_downloads %></td>
		</tr>
	</table>
	<button type="button" class="btn btn-default">
	<%= link_to("Download", {:action => 'download_file' , :uid => @upload.id}, :class => 'action show') %>
	</button>

</div>

